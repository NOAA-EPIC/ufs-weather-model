#%Module

proc ModulesHelp {} {
  puts stderr "\tcit - loads modules required for building and running UFS Model on Hera/Intel"
}

module-whatis "loads UFS Model prerequisites for Hera/Intel"

#module use /contrib/sutils/modulefiles
#module load sutils

module load cmake

module use /opt/hpc-modules/modulefiles/stack

module load hpc/1.2.0

module load hpc-intel-oneapi-compilers
module load hpc-intel-oneapi-mpi
module load miniconda3

module load ufs_common

setenv CC mpiicc
setenv CXX mpiicpc
setenv FC mpiifort
setenv CMAKE_Platform singularity.intel
